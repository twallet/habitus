# Habitus Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
# Server port number
PORT=3005

# Server base URL (used for constructing absolute URLs)
SERVER_URL=http://localhost

# Node environment: development, production, or test
NODE_ENV=development

# Trust proxy when behind reverse proxy (nginx, etc.)
# Set to "true" in production when behind a reverse proxy
TRUST_PROXY=false

# Enable verbose request logging in development
# Set to "true" to log all requests in development mode
VERBOSE_LOGGING=false

# ============================================
# JWT Authentication
# ============================================
# Secret key for JWT token signing (change in production!)
JWT_SECRET=your-secret-key-change-in-production

# JWT token expiration time (e.g., "7d", "24h", "1h")
JWT_EXPIRES_IN=7d

# ============================================
# Magic Link Authentication
# ============================================
# Magic link expiration time in minutes
MAGIC_LINK_EXPIRY_MINUTES=15

# Cooldown period in minutes before allowing another magic link request
MAGIC_LINK_COOLDOWN_MINUTES=5

# ============================================
# Database Configuration
# ============================================
# Database file path (relative to project root or absolute path)
# Leave empty to use default location: data/habitus.db
DB_PATH=data/habitus.db

# ============================================
# SMTP Email Configuration
# ============================================
# SMTP server hostname
SMTP_HOST=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username (usually your email address)
SMTP_USER=your-email@gmail.com

# SMTP password (use app password for Gmail)
SMTP_PASS=your-app-password

# ============================================
# Frontend Configuration (Vite)
# ============================================
# Note: Frontend variables must have VITE_ prefix to be exposed to client
# Server URL for frontend API calls
VITE_SERVER_URL=http://localhost

# Server port for frontend API calls
VITE_PORT=3005