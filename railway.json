{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build && cd backend && node dist/test-smtp.js || true"
  },
  "deploy": {
    "startCommand": "cd backend && npm run start:with-smtp-test",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
